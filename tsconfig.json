{
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "src/**/*.test.ts"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "compilerOptions": {
        "outDir": "build",
        "resolveJsonModule": true,
        "noImplicitUseStrict": true
    }
}